{
    "version": "2.0.0",
    "tasks": [{
        "label": "Build Library",
        "type": "shell",
        "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B .build -G Ninja && (cd .build; ninja)",
        "windows": {
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B .build -G Ninja; cd .build; ninja"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": ["$gcc"]
    }, {
      "label": "Build Example",
      "type": "shell",
      "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B .build -G Ninja && (cd .build; ninja)",
      "windows": {
          "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B .build -G Ninja; cd .build; ninja"
      },
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/example"
      },
      "dependsOn": ["Build Library"],
      "problemMatcher": ["$gcc"]
  }]
}